@model List<DTRBlog.Model.SubCommentList>

@{ 
    string author = ViewBag.blogAuthorId;
}

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="all-pl-con">
            <div class="pl-text hfpl-text clearfix">
                @Html.Action("NikeName", new { BlogId = item.CommentByUser })
                <input type="hidden" value="@item.CommentByUser" class="comment-userid" />
                <input type="hidden" value="@item.Comment.CommentID" class="comment-commentid" />
                <span class="my-pl-con">
                    @*回复<a href="#" class="atName">@@张三 </a> :*@
                    &nbsp; @item.Comment.CommentContent
                </span>
            </div>
            <div class="date-dz">
                <span class="date-dz-left pull-left comment-time">@item.Comment.CommentDate</span>
                <div class="date-dz-right pull-right comment-pl-block">
                    @if ((Session["BlogID"] != null && (Session["BlogID"].ToString() == item.CommentByUser))||(Session["BlogID"] != null && Session["BlogID"].ToString() == author))
                    {
                        <a href="javascript:;" class="removeBlock">删除</a>
                    }
                    @*<a href="javascript:;" class="date-dz-pl pl-hf hf-con-block pull-left">回复</a>*@
                </div>
            </div>
        </div>
    }

}


