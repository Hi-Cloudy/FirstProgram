    <link href="~/Content/plugin/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/static/css/font.css" rel="stylesheet" />
    <style>
        ul#w li a {
            text-align: left;
            margin-left: 28px;
        }

        ul#w li i {
