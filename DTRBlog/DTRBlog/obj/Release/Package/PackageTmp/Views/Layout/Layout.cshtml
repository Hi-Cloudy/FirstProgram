<script>
    $.ajax({
        type: 'POST',
        dataType: 'json',
        url: '/Home/showType',
        success: function (data) {
            alert(data);
        }
    });

    //动态伸缩iframe
    document.onmousemove = function (e) {
        var height = document.body.scrollHeight;
        if (height <= 165)
            return;
        var iframe = top.document.getElementById("DTR-nav");
        iframe.style.height = height + "px";
    }
    document.onmouseout = function (e) {
        var iframe = top.document.getElementById("DTR-nav");
        iframe.style.height = document.body.scrollHeight + "px";
    };
    //登录跳转
    var logHref = document.getElementById("DTR-Login") || null;
    var reHref = document.getElementById("DTR-Register") || null;
    if (logHref)
        logHref.addEventListener("click", function () {

            var localUrl = self.location.href;
            var currentUrlLastIndex = localUrl.lastIndexOf("currentUrl=");
            var currentUrl = localUrl.substring(currentUrlLastIndex)

            var logUrl = document.getElementById("DTR-LoginUrl").value;
            top.location.href = logUrl + "?" + currentUrl;
        });

    if (reHref)
        reHref.addEventListener("click", function () {

            var localUrl = self.location.href;
            var currentUrlLastIndex = localUrl.lastIndexOf("currentUrl=");
            var currentUrl = localUrl.substring(currentUrlLastIndex)
            var logUrl = document.getElementById("DTR-RegisterUrl").value;
            top.location.href = logUrl + "?" + currentUrl;
        })
</script>